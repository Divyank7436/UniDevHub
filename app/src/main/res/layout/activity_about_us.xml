<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".navbar_Activities.AboutUsActivity">







        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/tertiary"
            android:layout_marginTop="100dp"

            android:padding="30dp"
            >

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/imageLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/testicon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textAppName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="App Logo"/>

            <TextView
                android:id="@+id/textAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="UniDevHub"

                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/imageLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textAppDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Welcome to UniDevHub - Your Open source Contribution Hub"
                android:textSize="22sp"
                android:textColor="@color/primary"
                app:layout_constraintTop_toBottomOf="@+id/textAppName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textAboutContent"
                android:layout_width="0dp"
                android:textColor="@color/primary"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="UniDevHub is a vibrant and dynamic  platform that connects people from all around the world. Our app is designed to bring you closer to your folks related to your interest of Community, and the communities you care about."
                app:layout_constraintTop_toBottomOf="@+id/textAppDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Add more design elements as needed -->





</androidx.constraintlayout.widget.ConstraintLayout>